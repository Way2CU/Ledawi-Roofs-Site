<document>
	<cms:desktop>
		<figure>
			<img
				src="gallery::getThumbnailById($params['id'], null, 380, Thumbnail::CONSTRAIN_HEIGHT)"
				alt="$params['title'][$language]"
				cms:eval="src,alt"
			/>
		</figure>
	</cms:desktop>
	<cms:mobile>
		<figure>
			<img
				src="gallery::getThumbnailById($params['id'], null, 280, Thumbnail::CONSTRAIN_HEIGHT)"
				alt="$params['title'][$language]"
				cms:eval="src,alt"
			/>
		</figure>
	</cms:mobile>
</document>